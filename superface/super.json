{
  "profiles": {
    "communication/send-email": {
      "version": "1.1.0",
      "priority": [
        "sendgrid",
        "postmark"
      ],
      "defaults": {
        "SendEmail": {
          "providerFailover": true
        }
      },
      "providers": {
        "sendgrid": {
          "defaults": {
            "SendEmail": {
              "retryPolicy": {
                "kind": "circuit-breaker"
              }
            }
          }
        },
        "postmark": {
          "defaults": {
            "SendEmail": {
              "retryPolicy": {
                "kind": "circuit-breaker"
              }
            }
          }
        }
      }
    }
  },
  "providers": {
    "sendgrid": {
      "security": [
        {
          "id": "bearer_token",
          "token": "$SENDGRID_TOKEN"
        }
      ]
    },
    "postmark": {
      "security": [
        {
          "id": "server_token",
          "apikey": "$POSTMARK_API_KEY"
        }
      ]
    }
  }
}