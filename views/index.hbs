<h1>{{title}}</h1>

<p>Welcome to Resilient Email</p>

<form action="/" method="POST">
  <label for="to">To: </label>
  <input type="email" name="to" required>
  <input type="submit" value="Send Hello">
</form>

{{#if sendEmailResult}}
<pre>
  <code>
    {{ sendEmailResult }}
  </code>
</pre>
{{/if}}
